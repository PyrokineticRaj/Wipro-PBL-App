{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Java",
      "type": "shell",
      "command": "javac -d CompiledOutput ${file}; java -classpath CompiledOutput ${relativeFileDirname}.${fileBasenameNoExtension}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
